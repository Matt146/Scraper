<script type="text/javascript">
    const ignoreReference = [
      'c_to_js is not defined'
    ];

    Sentry.init({
      dsn: 'https://6986fcc221e04ce08115a78740512c04@sentry.io/1436592',
      release: window.APP_VERSION,
      environment: "production",
      autoBreadcrumbs: {
        'console': false,
        'dom': true,
        'location': true,
        'sentry': true,
        'xhr': true
      },
      maxBreadcrumbs: 10,
      whitelistUrls: [/xsplit\.com/],
      beforeSend: (event, hint) => {
        const currentEnv = "production";

        const shouldSend = (function() {
          if (currentEnv === 'dev' || currentEnv.startsWith('dev')) {
            return false;
          }

          // only send X% of events, because there's way too many.
          if (Math.random() <= 0.5) {
            return true;
          }

          return false;
        })();

        if (!shouldSend) {
          return null;
        }
        

        const extra = {};
        const { originalException } = hint;
        const errorName = originalException.constructor.name;

        // Custom error fingerprinting here
        if (errorName === 'ReferenceError') {
          if (ignoreReference.indexOf(originalException.message) > -1) {
            return null;
          }
          
          event.fingerprint = ['ReferenceError', originalException.message];
        }

        if (errorName === 'TypeError') {
          event.fingerprint = ['TypeError', originalException.message];
        }

        // this will add every properties of the exception to the extra
        Object.getOwnPropertyNames(originalException).forEach(prop => {
          // except stack, cause that's alredy embedded somewhere else, and its bigger
          if (prop === 'stack') {
            return;
          }
          extra[prop] = originalException[prop];
        });

        event.extra = {
          ...event.extra,
          ...extra,
        };

        // this will attach correct user data if it exists
        const userData = window.Store && window.Store.getState().userData;

        if (userData && userData.userInfo) {
          event.user = {
            ...event.user,
            id: userData.userInfo.id,
            email: userData.userInfo.email
          }
        }

        return event;
      },
    })
  </script>
